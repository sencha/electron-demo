{
  "name": "ext-electron",
  "version": "1.0.0",
  "description": "Ext JS / Electron demo workspace",
  "main": "index.js",
  "scripts": {
    "app": "electron app",
    "build-dev": "sencha --cwd app app build --dev",
    "build-prod": "sencha --cwd app build --clean --production",
    "clean": "rm -rf ext; rm -rf .sencha; rm -rf app/.sencha; rm -rf node_modules; rm -rf app/node_modules",
    "bundle-all": "electron-packager app App --all --out build/electron"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:sencha/ext-electron.git"
  },
  "keywords": [
    "extjs",
    "electron"
  ],
  "author": "Sencha",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dongryphon/ext-electron/issues"
  },
  "homepage": "https://github.com/dongryphon/ext-electron#readme",
  "devDependencies": {
    "electron": "^1.4.4",
    "electron-packager": "^8.2.0"
  }
}
